@model AspNetCoreMvcSqlSvr.Models.Shohin

@{
    ViewData["Title"] = "編集";
}

<h1>編集</h1>

<h4>商品</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NumId" />
            <div class="form-group">
                <label asp-for="ShohinCode" class="control-label"></label>
                <input asp-for="ShohinCode" class="form-control" />
                <span asp-validation-for="ShohinCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShohinName" class="control-label"></label>
                <input asp-for="ShohinName" class="form-control" />
                <span asp-validation-for="ShohinName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EditDate" class="control-label"></label>
                <input asp-for="EditDate" class="form-control" />
                <span asp-validation-for="EditDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EditTime" class="control-label"></label>
                <input asp-for="EditTime" class="form-control" />
                <span asp-validation-for="EditTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="保存" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">リストに戻る</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}